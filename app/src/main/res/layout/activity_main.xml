<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="116dp"
            android:layout_height="113dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"/>

    <view android:layout_width="185dp" android:layout_height="40dp"
          class="android.support.v7.widget.AppCompatTextView"
          android:id="@+id/resultLabel" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp"
          app:layout_constraintTop_toTopOf="parent"
          android:textSize="20sp"
          android:text="홍길동님의 혜돋이" android:maxLines="3" app:autoSizeMaxTextSize="20sp"
          app:autoSizeMinTextSize="16sp" app:autoSizeTextType="uniform" android:gravity="center"
          android:layout_marginTop="192dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="정보수정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="248dp"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="4dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="85dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.869" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <View
            android:layout_width="3dp"
            android:layout_height="276dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            android:id="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/cardView1" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="203dp" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.913" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cardView3"/>
    <android.support.v7.widget.CardView
            android:layout_width="186dp"
            android:layout_height="94dp"
            android:id="@+id/cardView1"
            android:layout_marginTop="422dp"
            app:layout_constraintEnd_toStartOf="@+id/cardView4"
            app:layout_constraintBottom_toTopOf="@+id/cardView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="25dp" app:layout_constraintHorizontal_bias="0.0">
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="186dp"
            android:layout_height="94dp"
            android:id="@+id/cardView2"
            android:layout_marginBottom="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView1" app:layout_constraintHorizontal_bias="0.0">
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="186dp"
            android:layout_height="94dp"
            android:id="@+id/cardView3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintVertical_bias="0.03"
            app:layout_constraintBottom_toTopOf="@+id/cardView4"
            android:layout_marginTop="16dp">
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="186dp"
            android:layout_height="94dp"
            android:id="@+id/cardView4"
            app:layout_constraintStart_toEndOf="@+id/view" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp"
            app:layout_constraintHorizontal_bias="1.0"
    >
    </android.support.v7.widget.CardView>
    <TextView
            android:text="받을 수 있는 혜택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="20sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView1" app:layout_constraintEnd_toStartOf="@+id/view"
            android:layout_marginEnd="29dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.982" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="찜한 혜택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="20sp"
            android:layout_marginTop="410dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.829"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>